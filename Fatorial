#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main (void)
{
    setlocale(LC_ALL, "Portuguese");

    int fat, n;

    printf("Digite o valor que deseja calcular seu fatorial: ");
    scanf("%d", &n);

    for(fat = 1; n > 1; n = n-1){
        fat = fat * n;
    }

    printf("Fatorial calculado Ã©: %d", fat);


  return 0;
}
