#include <stdio.h>

int main(){
    float n1, n2, n3, media;

    do{
        printf("Digite a primeira nota: (0 a 10.0) \n");
        scanf("%f", &n1);
    }while(n1 <=0 || n1>=10.0);

    do{
        printf("Digite a segunda nota: (0 a 10.0) \n");
        scanf("%f", &n2);
    }while(n2 <=0 || n2>=10.0);

    do{
        printf("Digite a terceira nota: (0 a 10.0) \n");
        scanf("%f", &n3);
    }while(n3 <=0 || n3>=10.0);


    media = ((n1*2)+(n2*3)+(n3*5))/ 10;

    printf("A media das notas e: %.1f", media);


    return 0;
}
